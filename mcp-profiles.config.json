  "agentOverrides": {
    "guardian": "coding",
    "iris-guardian": "coding",
    "dana-database": "ml",
    "dr-ai-ml": "ml",
    "maria-qa": "testing",
    "enhanced-maria": "testing",
    "james-frontend": "testing",
    "marcus-backend": "coding",
    "alex-ba": "coding",
    "sarah-pm": "coding",
    "oliver-mcp": "coding"
  },
  "profileDetection": {
    "enabled": true,
    "heuristics": {
      "filePatterns": {
        "*.sql": "ml",
        "*.prisma": "ml",
        "schema.ts": "ml",
        "migrations/**": "ml",
        "*.test.ts": "testing",
        "*.test.tsx": "testing",
        "*.spec.ts": "testing",
        "*.spec.tsx": "testing",
        "**/__tests__/**": "testing"
      },
      "taskKeywords": {
        "database": "ml",
        "migration": "ml",
        "train model": "ml",
        "embeddings": "ml",
        "rag": "ml",
        "test": "testing",
        "coverage": "testing",
        "playwright": "testing",
        "lighthouse": "testing",
        "accessibility": "testing"
      }
    }
  },
  "performance": {
    "startupTargetMs": 600,
    "memoryTargetMb": 130,
    "toolLatencyTargetMs": 100,
    "profileSwitchTargetMs": 500
  },
  "compatibility": {
    "backwardCompatible": true,
    "toolAliasesEnabled": true,
    "deprecationWindowVersions": 3,
    "migrationGuideUrl": "https://github.com/versatil/versatil-sdlc-framework/blob/main/docs/migration/v7.15-to-v7.16.md"
  },
  "lazyInitialization": {
    "enabled": true,
    "heavyTools": [
      "database_migrate",
      "database_backup",
      "ml_train_model",
      "ml_vertex_predict",
      "ml_openai_completion",
      "ml_anthropic_completion",
      "ml_hyperparameter_tune",
      "quality_playwright_test",
      "quality_lighthouse_audit"
    ]
  },
  "defaultProfile": "coding",
  "allowProfileSwitching": true,
  "logLevel": "info"
}
