# pnpm configuration for VERSATIL OPERA Framework

# Hoist all dependencies to root node_modules for compatibility
# This ensures tools that scan node_modules work correctly
shamefully-hoist=true

# Hoist patterns for common peer dependencies
public-hoist-pattern[]=*types*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@typescript-eslint/*

# Store directory for pnpm's content-addressable storage
# Default is ~/.pnpm-store but can be customized
# store-dir=~/.pnpm-store

# Auto-install peer dependencies
auto-install-peers=true

# Strict peer dependencies (warn but don't fail)
strict-peer-dependencies=false

# Use lockfile for reproducible installs
lockfile=true

# Node linker - use isolated for better security
# Can be 'isolated', 'hoisted', or 'pnp'
node-linker=hoisted

# Package import method - copy for better compatibility on macOS
# Options: auto, hardlink, copy, clone, clone-or-copy
package-import-method=auto

# Enable side effects cache for faster installs
side-effects-cache=true

# Registry (using default npm registry)
registry=https://registry.npmjs.org/
