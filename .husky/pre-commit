#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# VERSATIL Framework - Pre-Commit Quality Gates
# 1. Architectural validation (cross-file consistency)
# 2. Test coverage enforcement (80%+ coverage)

echo "ğŸ—ï¸  Step 1/2: Running architectural validation..."

# Run architectural validation FIRST (fast, catches major issues)
pnpm run validate:architecture

# Check if architectural validation passed
if [ $? -ne 0 ]; then
  echo "âŒ Architectural validation failed. Commit blocked."
  echo "   Fix the violations above or use 'git commit --no-verify' to skip (not recommended)"
  exit 1
fi

echo "âœ… Architectural validation passed"
echo ""
echo "ğŸ§ª Step 2/2: Running test coverage check..."

# Run tests with coverage
pnpm run test:coverage

# Check if tests passed
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Commit blocked."
  exit 1
fi

# Check coverage threshold
node scripts/check-coverage-threshold.cjs

# Check threshold result
if [ $? -ne 0 ]; then
  echo "âŒ Coverage below threshold. Commit blocked."
  exit 1
fi

echo "âœ… All quality gates passed. Proceeding with commit..."
exit 0
