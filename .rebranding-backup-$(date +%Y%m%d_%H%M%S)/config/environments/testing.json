{
  "name": "testing",
  "description": "Automated testing environment with isolated test data and CI/CD integration",
  "version": "1.2.0",
  "settings": {
    "debug": false,
    "hotReload": false,
    "mockExternalServices": true,
    "strictValidation": true,
    "verboseLogging": false
  },
  "services": {
    "mcp": {
      "host": "localhost",
      "port": 3001,
      "ssl": false,
      "autoRestart": false,
      "watchFiles": false
    },
    "database": {
      "type": "sqlite",
      "url": "file:./test.db",
      "pool": {
        "min": 1,
        "max": 3
      },
      "logging": false,
      "seedData": true,
      "resetOnStart": true
    },
    "supabase": {
      "url": "http://localhost:54322",
      "anonKey": "test-anon-key",
      "serviceKey": "test-service-key",
      "local": true,
      "testMode": true
    },
    "opera": {
      "enabled": true,
      "autoUpdate": false,
      "updateChannel": "stable",
      "maxConcurrentGoals": 2,
      "timeout": 120000
    }
  },
  "agents": {
    "maria-qa": {
      "enabled": true,
      "autoActivate": true,
      "debugMode": false,
      "testCoverageThreshold": 80,
      "performanceThreshold": 90,
      "strictMode": true
    },
    "james-frontend": {
      "enabled": true,
      "autoActivate": true,
      "debugMode": false,
      "hotReload": false,
      "testingOptimizations": true
    },
    "marcus-backend": {
      "enabled": true,
      "autoActivate": true,
      "debugMode": false,
      "mockDatabase": true,
      "apiLogging": false,
      "testingMode": true
    },
    "sarah-pm": {
      "enabled": true,
      "autoActivate": true,
      "reportingInterval": 60000,
      "detailedMetrics": false
    },
    "alex-ba": {
      "enabled": true,
      "autoActivate": false,
      "simulationMode": true,
      "testScenarios": true
    },
    "dr-ai-ml": {
      "enabled": false,
      "autoActivate": false,
      "localModels": true,
      "gpu": false,
      "mockPredictions": true
    }
  },
  "testing": {
    "runTestsOnChange": false,
    "parallelTesting": true,
    "testTimeout": 30000,
    "coverage": {
      "threshold": 80,
      "failOnLow": true
    },
    "e2e": {
      "headless": true,
      "slowMo": 0,
      "devtools": false,
      "retries": 2
    },
    "integration": {
      "enabled": true,
      "isolatedEnvironment": true,
      "cleanupAfterTests": true
    },
    "performance": {
      "enabled": true,
      "thresholds": {
        "responseTime": 200,
        "memoryUsage": 512,
        "cpuUsage": 80
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "metricsCollection": true,
    "performanceTracking": true,
    "errorTracking": true,
    "logLevel": "info",
    "testReporting": true
  },
  "security": {
    "authRequired": false,
    "encryptionEnabled": false,
    "auditLogging": true,
    "vulnerabilityScanning": true,
    "testSecurityPolicies": true
  },
  "features": {
    "ragMemory": true,
    "operaOrchestrator": true,
    "realTimeUpdates": false,
    "autoHealing": false,
    "distributedMode": false,
    "testingMode": true
  },
  "cicd": {
    "enabled": true,
    "testReports": true,
    "artifactStorage": true,
    "notifications": true,
    "autoDeployOnSuccess": false
  }
}