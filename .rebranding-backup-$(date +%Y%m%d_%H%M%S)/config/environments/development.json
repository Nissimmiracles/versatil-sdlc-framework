{
  "name": "development",
  "description": "Local development environment with hot reload and debugging",
  "version": "1.2.0",
  "settings": {
    "debug": true,
    "hotReload": true,
    "mockExternalServices": true,
    "strictValidation": false,
    "verboseLogging": true
  },
  "services": {
    "mcp": {
      "host": "localhost",
      "port": 3000,
      "ssl": false,
      "autoRestart": true,
      "watchFiles": true
    },
    "database": {
      "type": "sqlite",
      "url": "file:./dev.db",
      "pool": {
        "min": 1,
        "max": 5
      },
      "logging": true
    },
    "supabase": {
      "url": "http://localhost:54321",
      "anonKey": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOuoJy13RBRX5I2Qd0_c8t_k5X3QK6CqkCPQ",
      "serviceKey": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6InNlcnZpY2Vfcm9sZSIsImV4cCI6MTk4MzgxMjk5Nn0.DaYlNEoUrrEn2Ig7tqibS-PHK5vGuGuQqhNnUz7_v0o",
      "local": true
    },
    "opera": {
      "enabled": true,
      "autoUpdate": false,
      "updateChannel": "dev",
      "maxConcurrentGoals": 3,
      "timeout": 300000
    }
  },
  "agents": {
    "maria-qa": {
      "enabled": true,
      "autoActivate": true,
      "debugMode": true,
      "testCoverageThreshold": 70,
      "performanceThreshold": 85
    },
    "james-frontend": {
      "enabled": true,
      "autoActivate": true,
      "debugMode": true,
      "hotReload": true,
      "liveReload": true
    },
    "marcus-backend": {
      "enabled": true,
      "autoActivate": true,
      "debugMode": true,
      "mockDatabase": false,
      "apiLogging": true
    },
    "sarah-pm": {
      "enabled": true,
      "autoActivate": true,
      "reportingInterval": 30000,
      "detailedMetrics": true
    },
    "alex-ba": {
      "enabled": false,
      "autoActivate": false,
      "simulationMode": true
    },
    "dr-ai-ml": {
      "enabled": false,
      "autoActivate": false,
      "localModels": true,
      "gpu": false
    }
  },
  "testing": {
    "runTestsOnChange": true,
    "parallelTesting": false,
    "testTimeout": 10000,
    "coverage": {
      "threshold": 70,
      "failOnLow": false
    },
    "e2e": {
      "headless": false,
      "slowMo": 100,
      "devtools": true
    }
  },
  "monitoring": {
    "enabled": false,
    "metricsCollection": true,
    "performanceTracking": true,
    "errorTracking": true,
    "logLevel": "debug"
  },
  "security": {
    "authRequired": false,
    "encryptionEnabled": false,
    "auditLogging": false,
    "vulnerabilityScanning": false
  },
  "features": {
    "ragMemory": true,
    "operaOrchestrator": true,
    "realTimeUpdates": true,
    "autoHealing": false,
    "distributedMode": false
  }
}