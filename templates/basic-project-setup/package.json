{
  "name": "versatil-project-basic",
  "version": "1.0.0",
  "description": "Basic project setup with VERSATIL SDLC Framework",
  "main": "index.js",
  "scripts": {
    "dev": "npm run start",
    "start": "node server.js",
    "build": "webpack --mode=production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --fix",
    "format": "prettier --write src/",

    "versatil:test": "chrome-mcp test --config=.versatil/chrome-mcp-config.json",
    "versatil:validate": "node scripts/validate-setup.js",
    "versatil:agents": "node scripts/setup-agents.js",

    "maria:test": "npm test && npm run maria:visual",
    "maria:visual": "chrome-mcp test --visual",
    "maria:performance": "lighthouse http://localhost:3000",
    "maria:accessibility": "pa11y http://localhost:3000",

    "james:lint": "eslint src/ --fix && prettier --write src/",
    "james:build": "npm run build",
    "james:optimize": "webpack-bundle-analyzer dist/",

    "marcus:security": "npm audit && snyk test",
    "marcus:api": "node server.js",
    "marcus:docker": "docker-compose up -d"
  },
  "keywords": [
    "versatil",
    "sdlc",
    "ai-native",
    "opera",
    "quality-assurance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.9.1",

    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "playwright": "^1.39.0",
    "@playwright/test": "^1.39.0",

    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",

    "lighthouse": "^11.2.0",
    "pa11y": "^6.2.3",
    "axe-core": "^4.8.2",
    "snyk": "^1.1244.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run maria:test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/index.js"
    ]
  }
}